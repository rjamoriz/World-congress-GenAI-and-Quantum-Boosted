# Microsoft Outlook Integration Configuration
# Copy these to your .env file and fill in your Azure App Registration details

# Azure App Registration (required for Outlook integration)
OUTLOOK_CLIENT_ID=your-azure-app-client-id
OUTLOOK_CLIENT_SECRET=your-azure-app-client-secret
OUTLOOK_TENANT_ID=your-azure-tenant-id
OUTLOOK_REDIRECT_URI=http://localhost:3001/api/outlook/callback

# Outlook Integration Features
OUTLOOK_ENABLED=true
OUTLOOK_AUTO_SYNC=true
OUTLOOK_SYNC_INTERVAL=3600000  # 1 hour in milliseconds

# Microsoft Graph API Settings
GRAPH_API_VERSION=v1.0
GRAPH_BASE_URL=https://graph.microsoft.com

# Calendar Sync Settings
CALENDAR_SYNC_DAYS_AHEAD=30
CALENDAR_WORKING_HOURS_START=09:00
CALENDAR_WORKING_HOURS_END=18:00

# Meeting Creation Settings
AUTO_CREATE_TEAMS_MEETING=true
DEFAULT_MEETING_DURATION=60  # minutes
MEETING_BUFFER_TIME=15  # minutes between meetings

# Contact Search Settings
CONTACT_SEARCH_LIMIT=50
CONTACT_CACHE_TTL=1800000  # 30 minutes in milliseconds
