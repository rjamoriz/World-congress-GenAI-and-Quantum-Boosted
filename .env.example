# Environment Configuration

# Application
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/agenda-manager
MONGODB_TEST_URI=mongodb://localhost:27017/agenda-manager-test

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=30d

# OpenAI / GenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
ANTHROPIC_API_KEY=

# D-Wave Quantum Computing (Optional)
DWAVE_API_TOKEN=
DWAVE_SOLVER=Advantage_system4.1
ENABLE_QUANTUM=false

# Microsoft Outlook Integration
OUTLOOK_CLIENT_ID=
OUTLOOK_CLIENT_SECRET=
OUTLOOK_TENANT_ID=
OUTLOOK_REDIRECT_URI=http://localhost:3001/auth/outlook/callback

# Salesforce Integration
SALESFORCE_CLIENT_ID=
SALESFORCE_CLIENT_SECRET=
SALESFORCE_INSTANCE_URL=https://your-instance.salesforce.com
SALESFORCE_API_VERSION=v58.0

# Fraud Detection API (Optional)
FRAUD_DETECTION_API_KEY=
FRAUD_DETECTION_ENDPOINT=

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@worldcongress.com

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging & Monitoring
LOG_LEVEL=info
ENABLE_TRACING=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# Feature Flags
ENABLE_WEBSOCKETS=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_AUDIT_LOGGING=true
ENABLE_SYNTHETIC_DATA=true

# Scheduler Configuration
SCHEDULER_ALGORITHM=hybrid
CLASSICAL_SOLVER_TIMEOUT=30000
QUANTUM_SOLVER_TIMEOUT=60000
MAX_MEETINGS_PER_DAY=8
MEETING_DURATION_MINUTES=30
WORKING_HOURS_START=09:00
WORKING_HOURS_END=18:00

# Development
DEBUG=app:*
MOCK_EXTERNAL_APIS=true
